---
const { content } = Astro.props;
---

<section id={content.title} class="bg-primary-950 py-12 lg:py-32">
  <div class="flex items-center justify-center gap-9 md:gap-12 flex-wrap">
    <div class="lg:w-1/3">
      <h2
        class="mt-2 text-4xl font-bold tracking-tight leading-tighter text-accent-100 md:text-5xl lg:text-7xl text-center lg:text-right px-3 md:px-0"
        set:html={content.title}
      />
    </div>
    <div
      class="lg:w-1/3 text-lg leading-relaxed text-pretty font-light text-accent-100 text-center lg:text-left"
    >
      {
        content.paragraphs &&
          content.paragraphs.map((paragraph) => (
            <p class="mb-2 px-9 lg:px-0" set:html={paragraph} />
          ))
      }
    </div>
  </div>
</section>
