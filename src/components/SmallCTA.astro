---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { cta } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}"
);
if (!images[cta.imagePath]) {
  throw new Error(
    `"${cta.imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`
  );
}
---

<div class="relative flex flex-col justify-center items-center text-white text-center h-fit min-h-[600px] overflow-hidden rounded-lg shadow-lg">
        
  <!-- Background Image -->
  <Image
    src={images[cta.imagePath]()}
    alt={cta.imageAlt}
    loading={"lazy"}
    class="absolute inset-0 -z-20 object-cover object-center w-full h-full"
  />

  <!-- Dark Overlay for Better Contrast -->
  <div class="absolute inset-0 -z-10 w-full h-full bg-sky-700/70"></div>

  <!-- CTA Content -->
  <div class="p-6 flex flex-col gap-5 justify-center items-center">
    <h3 class="uppercase font-semibold text-white/80 tracking-wider">
      {cta.title}
    </h3>
    <p class="text-2xl md:text-3xl font-semibold leading-tight max-w-full break-words">
      {cta.description}
    </p>
    <a
      class="bg-yellow-400 text-sky-900 font-semibold text-lg md:text-xl hover:bg-white hover:text-sky-900 px-6 py-3 mt-4 w-fit inline-block rounded-md shadow-md transition-all duration-300 transform hover:scale-105"
      href={cta.button.link}
    >
      {cta.button.name}
    </a>  
  </div>

</div>
