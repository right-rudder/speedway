---
import ImageComp from "./ImageComp.astro";
import { BsArrowUpRightSquareFill } from "react-icons/bs";
import { IoMdCheckboxOutline } from "react-icons/io";


const content = {
  upperH: "About Us",
  header: "About our Academy",
  text: `We are LA Flight Academy, a flight school located in Van Nuys, CA. We pride ourselves on offering all of our students with a memorable and structured environment. Our priority is to provide a safe, transparent and fun experience for our students.<br/><br/>

          Whether you are training to fly as a hobby or pursuing a career in aviation, we offer all of the tools necessary to obtain your certificates and ratings.<br/><br/>

          At LA Flight Academy, we are a team. We work around your schedule and tailor the program based on your needs. Between our classrooms, variety of planes, and devoted instructors we are confident that we have the resources necessary for you to complete all of your certificates in a safe and efficient manner.`,
  imgPath: "/src/assets/lafa-taking-out-plane-for-lesson.jpg",
  imgAlt: "LAFA staff taking out plane for flight",
  missionH: "Our Mission",
  missionP: "Our academy is absolutely committed to providing the highest quality flight training in Los Angeles.",
  visionH: "Our Vision",
  visionP: "We are proud to be the only flight school to offer a full Career Pilot Course!",
}
---

<section class="py-8 bg-white">
  <div class="flex flex-col lg:flex-row justify-center items-center gap-8 lg:gap-20">
    <div class="w-10/12 lg:w-4/12">
      <h3 class="text-base font-semibold leading-7 text-primary-600 uppercase"
        set:html={content.upperH}
      />
      <h2 class="mt-0 text-5xl font-bold font-serif tracking-tight text-primary-800"
        set:html={content.header}
      />
      <div class="h-2 rounded-sm bg-gradient-to-br from-primary-800 to-primary-400 mt-3 w-1/3"/>
      <p class="mt-6 text-xl leading-8 text-muted-900"
        set:html={content.text}
      />
    </div>
    <div class="lg:w-4/12 h-[80vh] overflow-hidden rounded-sm">
      <ImageComp
        imagePath={content.imgPath}
        imageAlt={content.imgAlt}
        loading="eager"
        styles="object-cover object-center w-full h-full"
        widths={[240, 540, 720, 1080, 1440, 1980]}
        sizes={`(max-width: 300px) 240px, (max-width: 660px) 540px, (max-width: 900px) 720px, (max-width: 1200px) 1080px, (max-width: 1800px) 1440px, 1920px`}
      />
    </div>
  </div>
  <div class="flex flex-col lg:flex-row justify-center gap-12 mx-4 py-8">
    <div class="lg:w-4/12 flex flex-row justify-center items-center gap-4 p-10 py-6 border border-muted-400 transition-all duration-500 delay-100 hover:border-primary-400 hover:scale-105">
      <BsArrowUpRightSquareFill className="text-9xl text-center self-center text-primary-400"/>
      <div class="">
        <h2 class="text-2xl text-primary-950 font-bold">{content.missionH}</h2>
        <p class="">{content.missionP}</p>
      </div>
    </div>
    <div class="lg:w-4/12 flex flex-row justify-center items-center gap-4 p-10 py-6 border border-muted-400 transition-all duration-500 delay-100 hover:border-primary-400 hover:scale-105">
      <IoMdCheckboxOutline className="text-9xl text-center self-center text-primary-400"/>
      <div>
        <h2 class="text-2xl text-primary-950 font-bold">{content.visionH}</h2>
        <p>{content.visionP}</p>
      </div>
    </div>
  </div>
</section>
