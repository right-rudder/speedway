---
import content from "../data/featuresInfo.js";
const { title, description, features } = content;
---

<section class="py-16 lg:py-24 bg-accent-100">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Heading and Description -->
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-5xl font-bold text-primary-700 mb-4">
        {title}
      </h2>
      <p class="text-lg text-accent-800 max-w-4xl mx-auto">{description}</p>
    </div>

    <!-- Feature Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div class="text-center p-6 bg-mariner-950 shadow-md rounded-lg flex flex-col items-center justify-between" data-aos="fade-up" data-aos-delay={index * 200}>
          <div class="text-primary-700 text-4xl mb-4">🛩️</div> <!-- Icon Placeholder -->
          <div>
            <h3 class="text-xl font-semibold text-primary-700 mb-2">{feature.title}</h3>
            <p class="text-accent-200 mb-4">{feature.description}</p>
          </div>
          <a href={feature.link} class="text-primary-700 font-semibold hover:underline">
            {feature.linkText} →
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
