---
const { content } = Astro.props;
import ImageComp from "./ImageComp.astro";

---

<section id={content.title} class="relative py-12 lg:py-32">
  <div class="absolute -z-30 inset-0" aria-hidden="true">
    <ImageComp
      imagePath="/src/assets/lafa-pilot-programs-index-cover.jpg"
      imageAlt="LA flight academy aircraft flying over Los Angeles, California"
      loading="eager"
      styles="absolute object-cover h-full w-full object-center -z-50"
      widths={[240, 540, 720, 1080, 1440, 1980]}
      sizes={`(max-width: 300px) 240px, (max-width: 660px) 540px, (max-width: 900px) 720px, (max-width: 1200px) 1080px, (max-width: 1800px) 1440px, 1920px`}
    />
    <div class="absolute bg-primary-700/70 w-full h-full z-0"></div>
  </div>
  <div class="flex items-center justify-center gap-9 md:gap-12 flex-wrap">
    <div class="lg:w-1/3">
      <h2
        class="mt-2 text-4xl font-bold tracking-tight leading-tighter text-white md:text-5xl lg:text-7xl text-center lg:text-right px-3 md:px-0"
        set:html={content.title}
      />
    </div>
    <div
      class="lg:w-1/3 text-lg leading-relaxed text-pretty font-light text-white text-center lg:text-left"
    >
      {
        content.paragraphs &&
          content.paragraphs.map((paragraph) => (
            <p class="mb-2 px-9 lg:px-0" set:html={paragraph} />
          ))
      }
    </div>
  </div>
  <div class="w-full flex justify-center gap-16 pt-8">
    <a href="/about" class="btn-accent text-2xl">About Us</a>
    <a href="/packages/gallery" class="btn-accent text-2xl">Gallery</a>
  </div>
</section>
