---
import {
  COMPANY_NICKNAME,
  ADDRESS,
  ADDRESS_CITY,
  ADDRESS_STATE,
  ADDRESS_ZIP,
  AIRPORT,
  AIRPORT_CODE,
  PHONE_NUMBER,
  EMAIL_ADDRESS,
} from "../consts";
import CFIApplicationForm from "../components/CFIApplicationForm.astro";
---

<section
  class="relative z-10 bg-checkered bg-fixed text-accent-100 scroll-my-20 lg:scroll-my-28 pt-24"
  id="contact"
>
  <div class="relative z-10 max-w-7xl mx-auto">
    <div class="w-full flex flex-col items-center">
      <h2 class="text-center text-3xl font-semibold tracking-tighter uppercase pt-16 pb-5">
        Become a CFI
      </h2>
      <div class="bg-primary-800 w-48 h-1 mb-16"></div>
    </div>

    <div class="flex flex-col-reverse lg:flex-row">
      <!-- Text Section -->
      <div class="w-full lg:w-1/2">
        <div class="flex flex-col items-center">
          <h3 class="text-3xl font-semibold text-center">
            Start Teaching at {COMPANY_NICKNAME}
          </h3>
          <h4 class="text-2xl tracking-wider pb-5 text-center text-gray-100">
            Ready to Earn Income and Build Hours?
          </h4>
          <div class="bg-primary-800 w-72 h-1 mb-16"></div>

          <!--NAP-->
          <div class="flex flex-col gap-5 max-w-2xl pb-10 px-5">
            <div class="flex flex-row">
              <div class="text-accent-100">
                <!-- Location Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                  stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
              </div>
              <a href="https://www.google.com/maps/place/LA+Flight+Academy/..." class="ml-5 p-text text-gray-300">
                {AIRPORT} ({AIRPORT_CODE})<br />
                {ADDRESS}<br />
                {ADDRESS_CITY}, {ADDRESS_STATE} {ADDRESS_ZIP}
              </a>
            </div>

            <div class="flex flex-row">
              <div class="text-accent-100">
                <!-- Phone Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                  stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25..." />
                </svg>
              </div>
              <div class="ml-5 p-text text-gray-300">
                <a href={`tel:${PHONE_NUMBER}`}>{PHONE_NUMBER}</a><br />
              </div>
            </div>

            <div class="flex flex-row">
              <div class="text-accent-100">
                <!-- Email Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                  stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25..." />
                </svg>
              </div>
              <div class="ml-5 p-text text-gray-300">
                <a href={`mailto:${EMAIL_ADDRESS}`}>{EMAIL_ADDRESS}</a>
              </div>
            </div>

            <div class="flex flex-row">
              <div class="fill-white">
                <!-- Clock Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                  <path d="..."/>
                </svg>
              </div>
              <div class="ml-5 p-text text-gray-300">
                9:00 AM to 5:00 PM<br />
                All other times by appointment
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Form Section -->
      <div class="w-full lg:w-1/2">
        <div class="mx-auto px-10">
          <CFIApplicationForm />
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent);
  const contactUs = document.getElementById("contactUs");
  if (isSafari && contactUs) {
    contactUs.classList.remove("bg-fixed");
  }
</script>
