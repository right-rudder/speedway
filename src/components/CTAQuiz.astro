---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { content } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}"
);
if (!images[content.imagePath]) {
  throw new Error(
    `"${content.imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`
  );
}
---

<section
  class="relative lg:mt-0 h-screen lg:h-[81vh] -z-0 flex flex-col items-start lg:justify-center overflow-hidden"
>
  <Image
    src={images[content.imagePath]()}
    alt={content.imageAlt}
    loading={"lazy"}
    class="absolute right-0 -z-0 object-cover object-left-40 lg:object-left-bottom w-full lg:w-7/12 h-full rounded-2xl lg:mr-24 contrast-125"
    widths={[240, 540, 720, 1080, 1440, 1980]}
    sizes={`(max-width: 300px) 240px, (max-width: 660px) 540px, (max-width: 900px) 720px, (max-width: 1200px) 1080px, (max-width: 1800px) 1440px, 1920px`}
    data-aos="fade-left"
  />
  <div class="absolute bg-white/20 w-full h-full z-0"></div>
  <div
    class="text-white py-12 lg:mt-0 text-left z-10 flex flex-col items-start gap-4 px-5 h-full lg:w-3/12 lg:pt-28 justify-between lg:ml-24"
    data-aos="fade-right"
    data-aos-delay="500"
  >
    <div>
      <h3
        class="text-2xl md:text-3xl lg:text-4xl font-serif text-left md:max-w-3xl lg:max-w-6xl font-black lg:text-right italic tracking-wide text-primary-600 uppercase drop-shadow-md"
        set:html={content.headerH1}
      />
      <p
        class="text-base lg:text-xl mt-3 font-semibold tracking-wide text-primary-950 text-left max-w-5xl lg:text-right"
        set:html={content.paragraph}
      />

    </div>
    <div
      class="mt-6 w-full flex flex-wrap justify-center align-middle items-center gap-6 z-10"
    >
      {
        content.buttons.map((btn) => (
          <a
            href={btn.link}
            class={`${btn.primary ? "btn-primary" : "btn-accent"} w-full lg:px-12 text-2xl md:w-auto`}
          >
            {btn.name}
          </a>
        ))
      }
    </div>
  </div>
</section>
