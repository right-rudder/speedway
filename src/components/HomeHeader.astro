---
import { ADDRESS_CITY, ADDRESS_STATE, AIRPORT } from "../consts";
import ImageComp from "./ImageComp.astro";
import { Image } from "astro:assets";
import HeroImage from "../assets/speedway-checkered-flag-atlanta-hampton-georgia-plane-3.webp";
const {imagePath, imageAlt, loading, styles, widths, sizes} = Astro.props;
---

<section
  class="relative h-[100vh] lg:h-[83vh] overflow-hidden flex items-center justify-center md:justify-end p-0 m-0"
  aria-label="Speedway Flight Training, Atlanta Speedway Airport, Hampton, Georgia"
>

  {imagePath && (
    <div class="absolute -z-30 inset-0" aria-hidden="true">
        <Image
          src={HeroImage}
          alt="Speedway Flight Training aircraft flying over Hampton, Georgia"
          width={2440}
          loading="eager"
          fetchpriority="high"
          class="object-cover h-full w-full object-left-30 lg:object-center contrast-125 opacity-30"
          widths={[540, 720, 1080, 1440, 1920, 2440]}
          sizes="100vw"
        />
        {/* <ImageComp
          imagePath={imagePath}
          imageAlt="Speedway Flight Training aircraft flying over Hampton, Georgia"
          loading="eager"
          styles="object-cover h-full w-full object-left-30 lg:object-center contrast-125 opacity-30"
          fetchpriority="high"
          widths={[540, 720, 1080, 1440, 1980, 2440]}
          sizes={`(max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, (max-width: 1920px) 1920px, 2440px`}
        /> */}
    </div>
  )}

  <div
    class="absolute h-full w-full bg-black/10 -z-20 inset-0"
    aria-hidden="true"
  >
  </div>
  <div class="flex flex-col justify-center px-4 md:pr-24 text-accent-100 text-center md:items-end md:text-right max-w-4xl h-full"
    data-aos="fade-left"
  >
    <p
      class="text-6xl uppercase text-accent-100 font-sans2 md:text-7xl lg:text-8xl font-medium tracking-wide drop-shadow-md"
    >
      Fly Fast
    </p>
    <h1
      class="text-2xl lg:text-4xl max-w-3xl mt-3 text-accent-100 font-semibold tracking-wide drop-shadow-md "
    >
      Accelerated Flight Training Programs in {AIRPORT || `${ADDRESS_CITY}, ${ADDRESS_STATE}`}
    </h1>
    <div class="pt-16 w-full flex justify-end items-center gap-8 md:gap-16">
      <a href="/discovery-flight" class="btn-primary ">Discovery flight</a>
      <a href="#info" class="btn-primary">More Info</a>  
    </div>
  </div>
</section>
