---
import { FaCheck } from "react-icons/fa";
import SmallCTA from "./SmallCTA.astro";

const { program } = Astro.props;
const cta = program.cta;
const faqs = program.faqs;
---

<section class="mx-auto md:px-8 py-12">
  <!-- Program Heading -->
  <div class="w-full text-center">
    {program.upperHeading && (
      <h3 class="mx-auto uppercase text-lg lg:text-xl max-w-3xl font-sans font-bold tracking-tight text-sky-400">
        {program.upperHeading}
      </h3>
    )}
    {program.heading && (
      <h2 class="mx-auto mb-3 text-4xl lg:text-6xl max-w-3xl font-title font-bold tracking-tight text-sky-950">
        {program.heading}
      </h2>
    )}
    {program.subHeading && (
      <p class="mx-auto mb-12 text-lg max-w-3xl tracking-loose text-gray-900">
        {program.subHeading}
      </p>
    )}
  </div>

  <!-- Content Section -->
  <div class="flex flex-col lg:flex-row gap-12 px-4 lg:px-8 py-16 justify-center items-start">
    <!-- Left: Program Details -->
    <div class="lg:w-1/2 h-full bg-sky-100 p-8 lg:p-12 rounded-lg shadow-md">
      <h2 class="text-3xl font-semibold mb-6">{program.title}</h2>
      <p class="text-gray-800 leading-relaxed mb-10" set:html={program.description}></p>

      <!-- Key Points -->
      <div>
        <h3 class="text-2xl font-semibold mb-4">Key Points</h3>
        <ul class="space-y-3">
          {program.keyPoints.map((point) => (
            <li class="flex text-lg items-center bg-white/70 p-3 rounded-md shadow-sm hover:scale-105 hover:shadow-md transition-all duration-300">
              <FaCheck className="text-yellow-500 mr-2" /> {point}
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Right: FAQs & CTA -->
    <div class="lg:w-1/3 h-full flex flex-col gap-8 justify-between">
      <!-- FAQs Section -->
      <div class="bg-gray-50 p-6 rounded-lg shadow-md">
        <h3 class="text-xl font-semibold text-gray-900 mb-3">FAQs</h3>
        <ul class="space-y-4">
          {faqs.map((q) => (
            <li class="border-b pb-2 hover:bg-sky-100 transition-all duration-300 px-3 rounded-md">
              <h4 class="text-gray-900 font-medium">{q.question}</h4>
              <p class="text-gray-700 text-sm mt-1">{q.answer}</p>
            </li>
          ))}
        </ul>
      </div>

      <!-- Small CTA -->
      <SmallCTA cta={cta} />
    </div>
  </div>
</section>
