---
import ContactUs from "../components/ContactUs.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Location from "../components/Location.astro";
import HeaderSmall from "../components/HeaderSmall.astro";

const header = {
  imagePath: "/src/assets/0717d82c-98cc-4117-8c86-a44a99f09820.webp",
  headerH1: "Contact Us</br>Speedway",
  imageAlt: "Speedway Flight Training instructors and staff in front of a Cessna at KHMP",
  paragraph:
    "Have questions about training, scheduling a discovery flight, or applying to one of our programs? We're here to help. Reach out to the Speedway Flight Training team and take the next step toward your aviation goals.",
  buttons: [
    {
      name: "Get In Touch",
      link: "#contact",
      primary: false,
    },
  ],
};
---

<BaseLayout
  siteTitle="Contact Us | Speedway Flight Training"
  siteDescription="Have questions about flight training or enrollment? Contact Speedway Flight Training in Hampton, GA to speak with our team or schedule your first flight."
  keywords="Speedway Flight Training contact, flight school phone number, how to enroll, Hampton GA aviation, schedule discovery flight"
>
  <HeaderSmall content={header} />

  <ContactUs />

  <Location />
</BaseLayout>
