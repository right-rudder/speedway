---
import CFIApplication from "../components/CFIApplication.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Location from "../components/Location.astro";

const jobCards = [
  {
    title: "Admin Crew",
    description:
      "Support flight operations, scheduling, and student services from the front office.",
    hiring: false,
    link: "/files/speedway-flight-training-admin-crew-job-description.pdf",
  },
  {
    title: "Flight Crew",
    description:
      "Join our team of Certified Flight Instructors and help train the next generation of pilots.",
    hiring: false,
    link: "/files/speedway-flight-training-flight-crew-job-description.pdf",
  },
  {
    title: "Dispatcher",
    description:
      "Coordinate aircraft movements, student dispatch, and flight tracking for daily operations.",
    hiring: false,
    link: "/files/speedway-flight-training-dispatcher-job-description.pdf",
  },
];
---

<BaseLayout
  siteTitle="Join the Team | Speedway Flight Training"
  siteDescription="Explore career opportunities at Speedway Flight Training in Hampton, GA. Weâ€™re hiring passionate aviation professionals to join our flight crew, admin staff, and dispatcher team."
  keywords="flight school jobs Georgia, CFI positions, aviation careers Hampton GA, flight instructor openings, aviation admin jobs, dispatcher hiring"
>
  <section class="relative mt-28 z-10 bg-checkered bg-fixed text-accent-100 scroll-my-20 lg:scroll-my-28 pt-36 pb-8">
    <div class="max-w-7xl mx-auto px-6">
      <h1 class="text-center text-4xl lg:text-6xl font-sans2 -skew-x-12 font-bold mb-12">Career Opportunities at Speedway</h1>
      <div class="grid gap-10 md:grid-cols-3">
        {jobCards.map((card) => (
          <div class="bg-primary-800 p-6 rounded-lg shadow-md flex flex-col justify-between">
            <div>
              <h2 class="text-2xl font-semibold mb-2">{card.title}</h2>
              <p class="mb-8 text-sm text-accent-100">{card.description}</p>
            </div>
            <div class="mt-auto flex flex-col gap-2">
              <span
                class={`inline-block w-max text-white text-xs px-3 py-1 rounded-full ${
                  card.hiring ? "bg-mariner-500" : "bg-gray-400"
                }`}
              >
                {card.hiring ? "Now Hiring" : "Not Hiring"}
              </span>

              {card.hiring && (
                <a
                  href={card.link}
                  target="_blank"
                  class="text-primary-300 hover:underline text-sm"
                >
                  Download Job Description
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CFIApplication />

  <Location />
</BaseLayout>
